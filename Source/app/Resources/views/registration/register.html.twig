{% extends 'base.html.twig' %}

{% block body %}
    <div class="row justify-content-md-center">
        <div class="col-12 col-sm-12 col-md-8 col-lg-6">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-12 p-4 text-center font-weight-bold">
                    Registration Form ( Step 1 )
                </div>
            </div>
            <div class="form-group">
                <label for="register_username">Username</label>
                {{ form_widget(form.username, { 'attr': {'class':'form-control'}} ) }}
                <small id="register_username_error"
                       class="form-text text-danger">{{ form_errors(form.username) }}</small>
            </div>
            <div class="form-group">
                <label for="register_email">E-mail Address</label>
                {{ form_widget(form.email, { 'attr': {'class':'form-control'}} ) }}
                <small id="register_email_error" class="form-text text-danger">{{ form_errors(form.email) }}</small>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
            <button type="reset" class="btn btn-danger">Reset</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}