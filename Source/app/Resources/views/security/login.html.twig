{% extends 'base.html.twig' %}

{% block body %}
    <div class="row justify-content-md-center">
        <div class="col-12 col-sm-12 col-md-8 col-lg-6">
            <form action="{{ path('login') }}" method="post">
                <div class="row">
                    <div class="col-12 p-4 text-center font-weight-bold">
                        Login Form
                    </div>
                </div>
                <div class="form-group">
                    <label for="username">Username</label>
                    <input id="username" placeholder="Username" name="_username" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Password" name="_password"/>
                </div>
                {% if error %}
                    <div class="row">
                        <div class="col-12 text-center text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    </div>
                {% endif %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button type="submit" class="btn btn-primary">Login</button>
                <button type="reset" class="btn btn-danger">Reset</button>
            </form>
        </div>
    </div>
{% endblock %}